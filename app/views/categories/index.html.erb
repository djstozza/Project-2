<h2>Categories</h2>




<% @categories.each do |category| %>
  <ul>
    <li><%= link_to category.name, category %>
      <ul>
        <%  category.subcategories.each do |subcategory| %>
        <li><%= link_to subcategory.name, subcategory %></li>
        <% end %>
      </ul>
    </li>  
  </ul>
<% end %>


