<div class="row">
	<div id="employment_type" class="col-md-2">
		<%= f.label :employment_type, 'Employment Type' %>
		<%= f.select :employment_type, options_for_select(["full-time", "part-time", "casual", "contract", "employee's choice"]), :include_blank => true %>
	</div>
</div>
<div class="row">
	<div class="col-md-3"></div>
		<%= f.label :recruiter, 'Direct Contact by Recruiters is Okay'%>
		<%= f.check_box :recruiter %>
	
		<%= f.label :internship, 'Internship' %>
		<%= f.check_box :internship %>
	
		<%= f.label :non_profit, 'Non-profit Organisation' %>
		<%= f.check_box :non_profit %>
	
		<%= f.label :telecommuting, 'Telecommuting Permissible' %>
		<%= f.check_box :telecommuting %>

		<%= f.label :disability, 'Open for People with Disablities' %>
		<%= f.check_box :disability %>
</div>
<div class="row">
	<div class="col-md-3"></div>
      <div class="form-group col-md-6">
        <%= f.label :salary, :class => 'sr-only', :for => 'exampleInputSalary3' %>
        <%= f.text_field :salary, :class => 'form-control', :id => 'exampleInputSalary3', :placeholder => 'Payment - Be as Specific as Possible' %>
      </div>
</div>