<p id="notice"><%= notice %></p>

<h2><%= @subcategory.name %></h2>
<div class="listing">
	<ul>
	
		<li>
			<ul>
				<% count = 0 %>
				<% until count >= @subcategory.items.length %>
					<div class="row">
					<% 4.times do %>
						<div id="item-container" class="col-md-3">
							<li class="image-container">
								<%= link_to(cl_image_tag(@subcategory.items[count -1].image), @subcategory.items[count -1 ]) %>
							</li>
							<li class="description-container">
								<%= @subcategory.items[count -1].name %>
							</li>
						</div>
					
					<% count +=1 %>
					<% end %>
					</div>
				<% end %>
			</ul>	 
		</li>

	</ul>

</div>
