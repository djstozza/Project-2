<p id="notice"><%= notice %></p>

<h1>Listing Wishes</h1>

<table>
  <thead>
    <tr>
      <th>Wish</th>
      <th>User</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        <td><%= wish.name %></td>
        <td><%= wish.user.name %></td>
        <td><%= wish.subcategory.category.name %></td>
        <td><%= wish.subcategory.name %></td>
        <td><%= link_to 'Show', wish %></td>
        <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        <td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

